<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor = "#2f218d"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/portada"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            ></ImageView>

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steins;Gate"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/portada"
            android:layout_toRightOf="@+id/portada"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            ></TextView>

        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steins;Gate"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/portada"
            android:layout_toRightOf="@+id/portada"
            android:layout_below="@+id/titulo"
            ></TextView>

        <TextView
            android:id="@+id/añadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/portada"
            android:layout_marginTop="13dp"
            android:text="Añadir a Librería"
            android:textColor="@color/white"></TextView>

        <CheckBox
            android:id="@+id/añadirB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/portada"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-5dp"
            android:button="@android:drawable/btn_star"
            android:layout_toRightOf="@+id/añadir"></CheckBox>
    </RelativeLayout>



</androidx.cardview.widget.CardView>